import java.util.*;

//leetcode submit region begin(Prohibit modification and deletion)
class Solution {
    public boolean isValid(String s) {
        int n = s.length();
        if(n%2==1){
            return false;
        }
        Map<Character,Character> map = new HashMap<>() {{   //å‘mapä¸­æ·»åŠ é”®å€¼å¯¹çš„ä¸¤ç§æ–¹å¼
            put(')','(');
            put(']','[');
            put('}','{');
        }
        };
//        map.put(')','(');
//        map.put(']','[');
//        map.put('}','{');
        Stack<Character> stack = new Stack<>();
        for(int i = 0;i<n;i++){  //éå†ç»™å®šçš„æ‹¬å·å­—ç¬¦ä¸²
            char c = s.charAt(i);
            if(map.containsKey(c)){  //å¦‚æœéå†åˆ°çš„å­—ç¬¦å±äºmapä¸­çš„é”®å€¼ï¼Œå³ç»™å®šçš„å‡ ç§å³æ‹¬å·ï¼š),],}
                if(stack.empty() || stack.peek()!=map.get(c)){ //å¦‚æœæ ˆç©º æˆ–è€… æ ˆé¡¶å…ƒç´ ä¸ç­‰äºmapä¸­é”®cå¯¹åº”çš„å€¼
                                                       //å³å·¦æ‹¬å·ï¼Œåˆ™è¿”å›false
                    return false;
                }else {  //å¦åˆ™æ ˆé¡¶å…ƒç´  ç­‰äº mapä¸­é”®cå¯¹åº”çš„å€¼ï¼Œåˆ™æ ˆé¡¶å…ƒç´ å‡ºæ ˆï¼ŒåŒæ—¶åˆ é™¤
                    stack.pop();  
                }
            }
            else{
                stack.push(c);  //åªæœ‰å·¦æ‹¬å·æ‰ä¼šå…¥æ ˆ
            }
        }
        return stack.empty();

    }
}
